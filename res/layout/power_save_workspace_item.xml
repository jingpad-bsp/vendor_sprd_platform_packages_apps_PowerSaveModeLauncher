<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/app_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/text_view_top_margin"
        android:text = "@string/default_app_title"
        android:drawableTop="@drawable/default_add_icon"
        android:textColor="@color/clock_white"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:drawablePadding="3dp"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <ImageView
        android:id="@+id/delete_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/delete_image_end_margin"
        android:src="@drawable/edit_mark_icon"
        android:visibility="invisible"
        android:contentDescription="@string/delete"
        />

</FrameLayout>