<resources>
    <style name="Theme.Light.CustomOverscroll" parent="@android:style/Theme.DeviceDefault">
    </style>

    <style name="Theme.Dark.CustomOverscroll" parent="@android:style/Theme.DeviceDefault">
    </style>

    <style name="Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowColor">#B0000000</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Icon.AllApps">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/quantum_panel_text_color</item>
        <item name="android:drawablePadding">@dimen/dynamic_grid_icon_drawable_padding</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="customShadows">false</item>
    </style>

    <!-- Built-in clock stuff -->
    <style name="clock_label">
        <item name="android:textSize">@dimen/widget_label_font_size</item>
    </style>
    <style name="clock_big_thin">
        <item name="android:textSize">@dimen/widget_big_font_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimator</item>
    </style>

    <style name="ActivityAnimator">
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>
</resources>
